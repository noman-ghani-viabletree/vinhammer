			"type": "string",
			"default": "px"
		},
		"textAlign": {
			"type": "array",
			"default":  [ "", "", "" ]
		},
		"isFull": {
			"type": "boolean",
			"default": false
		},
		"showSale": {
			"type": "boolean",
			"default": true
		},
		"saleColor": {
			"type": "string"
		},
		"saleBackground": {
			"type": "string"
		},
