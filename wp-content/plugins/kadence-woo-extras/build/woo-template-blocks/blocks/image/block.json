			"default": true
		},
		"rel": {
			"type": "string",
			"default": ""
		},
		"linkTarget": {
			"type": "boolean",
			"default": false
		},
		"margin": {
			"type": "array",
			"default":  [ "", "", "", "" ]
		},
		"marginTablet": {
			"type": "array",
			"default":  [ "", "", "", "" ]
		},
		"marginMobile": {
			"type": "array",
			"default":  [ "", "", "", "" ]
		},
		"marginType": {
			"type": "string",
			"default": "px"
		},
		"padding": {
			"type": "array",
			"default":  [ "", "", "", "" ]
		},
		"paddingTablet": {
			"type": "array",
			"default":  [ "", "", "", "" ]
		},
		"paddingMobile": {
			"type": "array",
			"default":  [ "", "", "", "" ]
